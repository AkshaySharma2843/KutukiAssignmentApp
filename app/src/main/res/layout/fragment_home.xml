            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_3dp"
            android:text="@string/label_user_name"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/tv_hii"
            app:layout_constraintStart_toEndOf="@+id/tv_hii"
            app:layout_constraintTop_toTopOf="@id/tv_hii" />

